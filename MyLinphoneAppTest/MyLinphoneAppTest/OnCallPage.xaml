<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyLinphoneAppTest.OnCallPage">
    <ContentPage.Content>
        <StackLayout x:Name="stack_layout" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical" Spacing="15">
            <Label x:Name="welcome" Text="Welcome to Linphone Xamarin!" HorizontalOptions="Center" />
            
            <Button x:Name="call" Text="Accept Call" Clicked="OnCallClicked" HorizontalOptions="Center" />
            <Button x:Name="callRefuse" Text="Refuse Call" Clicked="OnCallRefuseClicked" HorizontalOptions="Center" />

            <ContentView x:Name="contentViewVideo"
                     IsVisible="True"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand">
            </ContentView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>